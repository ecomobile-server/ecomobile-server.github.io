---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import EcoMobile from "../components/EcoMobile.astro";
import LifeAtEco from "../components/LifeAtEco.astro";
import Carousel from "../components/Carousel.astro";
import Benefits from "../components/Benefits.astro";
import RecruitmentRoadmap from "../components/RecruitmentRoadmap.astro";
import IdealCandidate from "../components/IdealCandidate.astro";
import Mentors from "../components/Mentors.astro";
import Inspiration from "../components/Inspiration.astro";
import News from "../components/News.astro";
import CallToAction from "../components/CallToAction.astro";
import Footer from "../components/Footer.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout
  title="EPM Gen 2.0 - Eco Mobile | Chương trình Quản trị viên Tập sự"
  description="Tham gia EPM Gen 2.0 - Chương trình tìm kiếm và đào tạo những nhà lãnh đạo tương lai tại Eco Mobile. Cơ hội phát triển sự nghiệp và thăng tiến vượt bậc.">
  <Header />
  <main>
    <Hero />
    <LifeAtEco />
    <Carousel
      images={[
        { src: "/images/carousel/desktop/photo_1.png", alt: "Team photo 1" },
        { src: "/images/carousel/desktop/photo_2.png", alt: "Team photo 2" },
        { src: "/images/carousel/desktop/photo_3.png", alt: "Team photo 3" },
        { src: "/images/carousel/desktop/photo_4.png", alt: "Team photo 4" },
        { src: "/images/carousel/desktop/photo_5.png", alt: "Team photo 5" },
        { src: "/images/carousel/desktop/photo_6.png", alt: "Team photo 6" },
      ]}
      mobileImages={[
        { src: "/images/carousel/mobile/photo_1.png", alt: "Team photo 1" },
        { src: "/images/carousel/mobile/photo_2.png", alt: "Team photo 2" },
        { src: "/images/carousel/mobile/photo_3.png", alt: "Team photo 3" },
        { src: "/images/carousel/mobile/photo_4.png", alt: "Team photo 4" },
        { src: "/images/carousel/mobile/photo_5.png", alt: "Team photo 5" },
        { src: "/images/carousel/mobile/photo_6.png", alt: "Team photo 6" },
      ]}
      autoPlay={true}
      autoPlayInterval={5000}
    />
    <Benefits />
    <IdealCandidate />
    <RecruitmentRoadmap />
    <EcoMobile />
    <Mentors />
    <News />
    <CallToAction />
    <Inspiration />
  </main>
  <Footer />
</Layout>
